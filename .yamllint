---
extends: default

rules:
  line-length:
    max: 120
    allow-non-breakable-words: true
  truthy: disable
  indentation:
    spaces: 2
    indent-sequences: consistent
  trailing-spaces: disable
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
